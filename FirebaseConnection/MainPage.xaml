<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirebaseConnection.MainPage">

    <StackLayout>
        <Button Text="Read Data" Clicked="Button_Clicked"/>
        <Button Text="Pull Image" Clicked="ImagePull" />

        <ListView x:Name="testList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Image x:Name ="TestImage"   Source="" />
    </StackLayout>

</ContentPage>
